    securedBy:
        client_id_enforcement
    description: "updates bed availablity related data" 
    post:
     body:
          application/json:
            examples:
              input: !include examples/updateBedData.json
     responses:
      200:
        description: Success Response message
        body:
          application/json:
            examples:
