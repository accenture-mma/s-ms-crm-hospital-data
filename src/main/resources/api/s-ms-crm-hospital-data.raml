/getHospitalList:
    securedBy:
        client_id_enforcement
    description: "returns Hospital related data"
    get:
     responses:
      200:
        description: Success Response message
        body:
          application/json:
            examples:
              output: !include examples/HospitalList.json

      500: 
        description: Error server
        body:
          application/json:
            examples:
              output: !include examples/errorResponse.json
/getBedAvailableList:
    securedBy:
        client_id_enforcement
    description: "returns Bed Availability related data"
    get:
     description: "returns specific bed availablity related data based on hospital name"
     queryParameters:
        hospital_name:
            description: "the hospital name to be searched"
            required: true
            minLength: 5
            type: string
            example: "Aster CMI Hospital"
     responses:
      200:
        description: Success Response message
        body:
          application/json:
            examples:
              output: !include examples/BedAvailableList.json

      500: 
        description: Error server
        body:
          application/json:
            examples:
              output: !include examples/errorResponse.json