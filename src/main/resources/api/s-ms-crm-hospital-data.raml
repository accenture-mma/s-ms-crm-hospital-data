#%RAML 1.0
title: s-ms-crm-hospital-data
description: System API Hospital Data
version: 1.0

securitySchemes:
  client_id_enforcement: !include security/securityScheme.raml

/createHospitalData:
    securedBy:
      client_id_enforcement
    description: "creates Hospital related data"
    post:
     body:
          application/json:
            examples:
              input: !include examples/createHospitalData.json
     responses:
      200:
        description: Success Response message
        body:
          application/json:
            examples:
              output: !include examples/HospitalDataSuccessResponse.json

      500: 
        description: Error server
        body:
          application/json:
            examples:
              output: !include examples/errorResponse.json

